{
  "name": "turn-server",
  "version": "1.0.0",
  "description": "A GraphQL server for the Turn platform.",
  "main": "index.js",
  "scripts": {
    "clean": "rm -rf ./dist",
    "build": "npm run clean && babel -d ./dist ./src -s",
    "start": "nodemon ./src/index.js --exec babel-node",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/mattietea/turn-server.git"
  },
  "author": "Matt Thomas",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/mattietea/turn-server/issues"
  },
  "homepage": "https://github.com/mattietea/turn-server#readme",
  "dependencies": {
    "apollo-server": "^2.0.0",
    "bcryptjs": "^2.4.3",
    "graphql": "^0.13.2",
    "mongoose": "^5.2.5"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-plugin-dotenv": "^0.1.1",
    "babel-plugin-import-glob": "^2.0.0",
    "babel-plugin-import-graphql": "^2.6.2",
    "babel-plugin-inline-dotenv": "^1.1.2",
    "babel-preset-env": "^1.7.0",
    "babel-preset-stage-3": "^6.24.1",
    "eslint": "^5.2.0",
    "eslint-config-standard": "^11.0.0",
    "eslint-plugin-import": "^2.13.0",
    "eslint-plugin-node": "^7.0.1",
    "eslint-plugin-promise": "^3.8.0",
    "eslint-plugin-standard": "^3.1.0",
    "nodemon": "^1.18.3"
  },
  "nodemonConfig": {
    "ext": "js,json,gql"
  },
  "babel": {
    "presets": [
      [
        "env",
        {
          "targets": {
            "node": "8.11.3"
          }
        }
      ],
      "stage-3"
    ],
    "plugins": [
      "import-graphql",
      "import-glob",
      "inline-dotenv"
    ]
  },
  "eslintConfig": {
    "extends": "standard",
    "env": {
      "node": true
    },
    "rules": {
      "semi": [
        2,
        "always"
      ]
    }
  }
}
